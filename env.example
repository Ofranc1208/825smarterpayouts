# SmarterPayouts Enterprise Environment Configuration
# Copy this file to .env.local, .env.staging, .env.production as needed

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_APP_VERSION=2.0.0
NEXT_PUBLIC_APP_NAME=SmarterPayouts
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# VERCEL DEPLOYMENT
# =============================================================================
VERCEL_TOKEN=your_vercel_token_here
VERCEL_ORG_ID=your_vercel_org_id_here
VERCEL_PROJECT_ID=your_vercel_project_id_here
VERCEL_ENV=development

# =============================================================================
# DATABASE & EXTERNAL SERVICES
# =============================================================================
# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://your_project-default-rtdb.firebaseio.com

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_ORGANIZATION=your_organization_id

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GA_DEBUG_MODE=false

# Sentry (Error Monitoring)
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# LogRocket (Session Recording)
NEXT_PUBLIC_LOGROCKET_APP_ID=your_logrocket_app_id

# =============================================================================
# SOCIAL MEDIA APIs
# =============================================================================
# Twitter/X Platform
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# LinkedIn
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# Facebook
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token

# Medium
MEDIUM_ACCESS_TOKEN=your_medium_access_token

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# JWT Secret
JWT_SECRET=your_jwt_secret_here_minimum_32_characters

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://smarterpayouts.com

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================
# Redis Configuration (if using)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# CDN Configuration
NEXT_PUBLIC_CDN_URL=https://cdn.smarterpayouts.com

# =============================================================================
# TESTING & DEVELOPMENT
# =============================================================================
# Test Database
TEST_DATABASE_URL=your_test_database_url

# Test API Keys
TEST_OPENAI_API_KEY=your_test_openai_key
TEST_FIREBASE_CONFIG=your_test_firebase_config

# =============================================================================
# FEATURE FLAGS
# =============================================================================
NEXT_PUBLIC_ENABLE_AI_CHAT=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_SOCIAL_SHARING=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# NOTIFICATIONS & INTEGRATIONS
# =============================================================================
# Slack Webhook
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Email Service (SendGrid, etc.)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@smarterpayouts.com

# SMS Service (Twilio, etc.)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number
TWILIO_CHAT_SERVICE_SID=your_twilio_chat_service_sid

# Appointment System - Firebase + Email Notifications
# Appointments are saved to Firebase Firestore
# View them in Firebase Console: https://console.firebase.google.com/
# Collection: appointments

# Email Notifications (Gmail SMTP)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-16-character-app-password
NOTIFICATION_EMAIL=your-email@gmail.com

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Document Management
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name

# =============================================================================
# MONITORING & ALERTS
# =============================================================================
# Uptime Monitoring
UPTIME_ROBOT_API_KEY=your_uptime_robot_key

# Performance Monitoring
NEXT_PUBLIC_WEB_VITALS_REPORTING=true
NEXT_PUBLIC_PERFORMANCE_MONITORING=true

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Debug Mode
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_LOG_LEVEL=info

# Hot Reload
FAST_REFRESH=true
TURBO_MODE=true
