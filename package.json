{
  "name": "settlement-calculator-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "postbuild": "purgecss --css .next/static/css/*.css --content './app/**/*.{js,ts,jsx,tsx,html}' --output .next/static/css/",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__ --testPathPattern=\\.test\\. --coverage",
    "test:integration": "jest --testPathPattern=integration --coverage",
    "test:e2e": "playwright test",
    "test:ci": "jest --ci --coverage --watchAll=false --maxWorkers=2",
    "test:debug": "jest --detectOpenHandles --forceExit",
    "test:performance": "jest --testPathPattern=performance --coverage",
    "test:accessibility": "jest --testPathPattern=accessibility --coverage",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "build:analyze": "ANALYZE=true npm run build",
    "build:staging": "NODE_ENV=staging npm run build",
    "build:production": "NODE_ENV=production npm run build",
    "deploy:staging": "vercel --prod=false",
    "deploy:production": "vercel --prod",
    "deploy:preview": "vercel",
    "health-check": "curl -f $VERCEL_URL/api/health || exit 1"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "date-fns": "^4.1.0",
    "firebase": "^11.8.1",
    "next": "^14.2.29",
    "openai": "^5.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "twitter-api-v2": "^1.24.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.57",
    "@types/react-dom": "^18.2.19",
    "autoprefixer": "^10.4.17",
    "babel-jest": "^30.0.4",
    "eslint-config-next": "15.3.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.35",
    "purgecss": "^6.0.0",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.4.0",
    "typescript": "^5.3.3",
    "web-vitals": "^3.5.2",
    "jest-extended": "^4.0.2",
    "jest-axe": "^8.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "@lhci/cli": "^0.12.0",
    "playwright": "^1.42.1"
  }
}
