{
  "rules": {
    "chat-sessions": {
      ".indexOn": ["status", "specialistId"],
      "$sessionId": {
        ".read": true,
        ".write": true,
        "messages": {
          ".read": true,
          ".write": true,
          ".indexOn": "timestamp"
        },
        "metadata": {
          ".read": true,
          ".write": true
        }
      }
    },
    "specialists": {
      ".read": true,
      ".write": true,
      "$specialistId": {
        ".read": true,
        ".write": true
      }
    },
    "chat-queue": {
      ".read": true,
      ".write": true
    }
  }
}
